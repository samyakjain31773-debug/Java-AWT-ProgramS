import java.awt.*;  // GUI components (Frame, Label, TextField, Choice)
import java.awt.event.*; // Event handling (ItemListener, WindowAdapter)
class Student    // Base Class 
{
    String name;
}
class Person extends Student   // Derived from Student
{
    String course;
    String subject;
}
class Result extends Person   // Derived from Person
{
    String marks;
    void setData(String n, String c, String s, String m)   // Ye method ek hi baar me sab values assign karta hai.
    // Data store karta hai object r me
    {
        name = n;
        course = c;
        subject = s;
        marks = m;
    }
}
public class MultilevelDemo extends Frame implements ItemListener   //Data store karta hai object r me
// extends Frame â†’ GUI window bana raha hai
// implements ItemListener â†’ Dropdown change hone par event handle karega
{
    Choice C;  //Choice C â†’ Registration number dropdown
    TextField t1, t2, t3, t4;  // TextField â†’ Name, Course, Subject, Marks show karne ke liye
    Result r = new Result();   // Result r â†’ Object jo inheritance data hold karega
    MultilevelDemo()//Constructor â€“ GUI Design
    {
        setTitle("Multilevel Inheritance");
        Label l1 = new Label("Registration No:");
        C = new Choice();
        C.add("1001");
        C.add("1002");//Jab dropdown change hoga,itemStateChanged() method call hoga.
        C.add("1003");
        C.add("1004");
        Label l2 = new Label("Name:");
        Label l3 = new Label("Course:");
        Label l4 = new Label("Subject:");
        Label l5 = new Label("Marks:");
        t1 = new TextField();
        t2 = new TextField();
        t3 = new TextField();
        t4 = new TextField();
        l1.setBounds(50, 80, 120, 30);
        C.setBounds(180, 80, 100, 30);     // size set kar te ha issa sa 
        l2.setBounds(50, 120, 120, 30);
        t1.setBounds(180, 120, 150, 30);
        l3.setBounds(50, 160, 120, 30);
        t2.setBounds(180, 160, 150, 30);
        l4.setBounds(50, 200, 120, 30);
        t3.setBounds(180, 200, 150, 30);
        l5.setBounds(50, 240, 120, 30);
        t4.setBounds(180, 240, 150, 30);
        add(l1);     // Frame me add kiya ha .
        add(C);
        add(l2); 
        add(t1);
        add(l3); 
        add(t2);
        add(l4); 
        add(t3);
        add(l5); 
        add(t4);
        t1.setEditable(false);//User manually type nahi kar sakta. Sirf dropdown se data ayega
        t2.setEditable(false);
        t3.setEditable(false);
        t4.setEditable(false);
        C.addItemListener(this);  
        addWindowListener(new WindowAdapter() // Window close button dabane par program properly close ho jaye.
        {
            public void windowClosing(WindowEvent e)
            {
                dispose();
            }
        });
        setSize(500, 500);
        setLayout(null); // Manual positioning karne ke liye use kiya.
        setVisible(true);
    }
    public void itemStateChanged(ItemEvent e)
    {
        String reg = C.getSelectedItem();
        if(reg.equals("1001"))
            r.setData("Samyak", "BSc CS", "Java", "85");
        else if(reg.equals("1002"))
            r.setData("Dashan", "BSc IT", "Python", "90");
        else if(reg.equals("1003"))
            r.setData("Darpan", "BSc CS", "C++", "80");
        else if(reg.equals("1004"))
            r.setData("Rachit", "BSc IT", "JavaScript", "88");
        t1.setText(r.name);
        t2.setText(r.course);// TextFields me data display hota hai.
        t3.setText(r.subject);
        t4.setText(r.marks);
    }
    public static void main(String[] args)
    {
        new MultilevelDemo();
    }
}
// ðŸ’¡ Concepts Used
// Multilevel Inheritance
//AWT (GUI)
//Method Calling
//Event Handling
// Object Creation
// Conditional Statements
//   This program demonstrates multilevel inheritance in Java.
//  The Student class is the base class, Person extends Student, and Result extends Person.
//  AWT is used to create a GUI where student details are displayed based on selected registration number.
//  Event handling is implemented using ItemListener. 



